@model IEnumerable<PHAMDANGXUANDUY_NET1601_ASS01.Domain.Entity.RoomInformation>

@{
    ViewData["Title"] = "Index";
}
@if (ViewBag.ADMIN != null)
{
    <a asp-controller="Home" asp-action="HomePage">Back to List</a>

    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RoomNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoomDetailDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoomMaxCapacity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoomStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoomPricePerDay)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoomTypeId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomDetailDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomMaxCapacity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomPricePerDay)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomTypeId)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.RoomId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.RoomId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.RoomId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No customer information available.</p>

}