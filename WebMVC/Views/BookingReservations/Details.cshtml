@model PHAMDANGXUANDUY_NET1601_ASS01.Infrastructure.Common.Model.Response.ResponseBookingRevervation

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>BookingReservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingReservationId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingReservationId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BookingDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookingDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BookingStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookingStatus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustomerId)
        </dd>
    </dl>
</div>
<h4>Booking Details</h4>
@if (Model.BookingDetails != null && Model.BookingDetails.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Room ID</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Actual Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bookingDetail in Model.BookingDetails)
            {
                <tr>
                    <td>@bookingDetail.RoomId</td>
                    <td>@bookingDetail.StartDate</td>
                    <td>@bookingDetail.EndDate</td>
                    <td>@bookingDetail.ActualPrice</td>
                </tr>
            }
        </tbody>
    </table>
}
<div>
    <a asp-action="Edit" asp-route-id="@Model?.BookingReservationId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
